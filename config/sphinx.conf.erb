indexer
{
  mem_limit = <%= @mem_limit %>
}

searchd
{
  listen = 127.0.0.1:9312
  log = <%= Rails.root %>/log/searchd.log
  query_log = <%= Rails.root %>/searchd.query.log
  pid_file = <%= Rails.root %>/searchd.<%= Rails.env.to_s %>.pid
}

source items_src
{
  type = xmlpipe2
  xmlpipe_command = erb <%= Rails.root %>/static/items.xmlpipe2.erb
}

index items
{
  source = items_src
  path = <%= Rails.root %>/sphinxsearch/data/items
  charset_type=utf-8
}
