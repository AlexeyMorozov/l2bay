<?xml version="1.0" encoding="utf-8"?>
<sphinx:docset>

<sphinx:schema>
  <sphinx:field name="name"/>
  <sphinx:field name="sa"/>
</sphinx:schema>

<% items.each do |item| %>
  <sphinx:document id="<%= item.id %>">
    <name><%= item.name.encode(xml: :text) %></name>
    <sa><%= item.sa.encode(xml: :text) %></sa>
  </sphinx:document>
<% end %>

</sphinx:docset>
