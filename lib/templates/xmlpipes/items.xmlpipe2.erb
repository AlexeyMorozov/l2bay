<?xml version="1.0" encoding="utf-8"?>
<sphinx:docset>

<sphinx:schema>
  <sphinx:field name="name"/>
  <sphinx:field name="sa"/>
  <sphinx:attr name="position_by_name" type="int" bits="16"/>
</sphinx:schema>

<% items.each do |item| %>
  <sphinx:document id="<%= item.id %>">
    <name><%= item.name.encode(xml: :text) %></name>
    <sa><%= item.sa.encode(xml: :text) %></sa>
    <position_by_name><%= item.position_by_name %></position_by_name>
  </sphinx:document>
<% end %>

</sphinx:docset>
