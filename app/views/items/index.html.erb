<% title "Items" %>

<%= form_tag items_path, method: :get, class: 'form-search' do %>
  <p>
    <%= text_field_tag :query, params[:query], class: 'input-medium search-query' %>
    <%= submit_tag "Search", name: nil, class: 'btn' %>
  </p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Sa</th>
  </tr>
  <% for item in @items %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.sa %></td>
      <td><%= link_to "Show", item %></td>
    </tr>
  <% end %>
</table>

